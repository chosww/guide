            <nav aria-labelledby="navigation" x-data="{open: false}">
                {% include "partials/components/brand.njk" %}
                <button aria-expanded="false" x-bind:aria-expanded="open" @click="open = !open">
                    {% include "node_modules/idg-design-system/dist/static/svg/close.svg" %}
                    {% include "node_modules/idg-design-system/dist/static/svg/menu.svg" %}
                    <span class="label">{% _ locale, "menu" %}</span>
                </button>
                <div class="inner flow">
                    <h2 id="navigation">{% _ locale, "Menu" %}</h2>
                    <ul role="list">
                        {% set navItems = collections.all | eleventyNavigation %}
                        {% for item in navItems %}
                        {% if locale === item.lang %}
                        <li>
                        <a class="--{{ item.title | slugify }}" href="{{ item.url | url }}"{% if item.url == page.url %} aria-current="page"{% endif %}>{{ item.title }}</a>
                        </li>
                        {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </nav>
